@import 'mixins';

section.homeContent {
  width: 100%;
  height: 100%;

  .jcarousel {
    position: relative;
    overflow: hidden;
    transition: 1s opacity ease;
    opacity: 0;

    img { width: 100%; }
  }
 
  .jcarousel ul {    
    width: 20000em;
    position: relative;
    list-style: none;
    margin: 0;
    padding: 0;
  }
 
  .jcarousel li {    
    float: left;

    img:first-child {
      display: none;
    }
  }
 
  .jcarousel-pagination {
    text-align: center;

    a {      
      display: inline-block;
      font-size: 11px;
      height: 10px;
      width: 10px;
      border-radius: 10px;
      background: #fff;
      text-indent: -9999px;
      margin-right: 9px;
      &.active {
        background: #757475;
      }
    }
  }
   
  article.container {
    @include flex;
    @include justify-content-center;

    .circles {    
      padding-top: 2%;
      width: 75%;
      height: 50%;
      @include flex;
      @include justify-content-space-between;
      margin-bottom: 1%;

      aside {
        background: transparent;
        text-align: center;
        line-height: 30px;
      }
     
      .playWhere {
        background-image: asset-url('where_to_play.svg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;

        img {
          width: 89%;
          border-radius: 50%;
          border: 12px solid;
          border-color: #FFF;
          margin-top: 9%;
          box-sizing: border-box;
        }
      }

      .scoringApp {
        background-image: asset-url('scoring_app.svg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;

        img {
          width: 80%;
          border-radius: 50%;
          border: 12px solid;
          border-color: #FFF;
          margin-top: 9%
        }
      }

     
      .statsCentre {
        background-image: asset-url('stats_centre.svg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;

        img {
          width: 80%;
          border-radius: 50%;
          border: 12px solid;
          border-color: #FFF;
          margin-top: 9%;
        }
      }

    }
  }
}
 
  