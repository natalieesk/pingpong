%section.formContainer.registerModal

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %i.close
      = hoverable_image_tag 'close'
    %h2.shadowCaps Sign up
    %i.facebookSignin
      = link_to player_omniauth_authorize_path(:facebook) do
        = hoverable_image_tag 'facebook_login'
    %i.googleSignin
      = link_to player_omniauth_authorize_path(:google_oauth2) do
        = hoverable_image_tag 'google_login'
    %p.or
      or
    %article.siteSignin
      %section.fieldContainer
        %h3.field
          = f.label :email
          = f.email_field :email, :autofocus => true
          - if resource.errors[:email].any?
            %span.error= resource.errors[:email].join(', ')
        %h3.field
          = f.label :password
          = f.password_field :password
          - if resource.errors[:password].any?
            %span.error= resource.errors[:password].join(', ')
        %h3.field
          = f.label :password_confirmation
          = f.password_field :password_confirmation
          - if resource.errors[:password].any?
            %span.error= resource.errors[:password].join(', ')
        = f.button class: 'submitSignUp'